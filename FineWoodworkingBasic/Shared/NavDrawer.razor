@using FineWoodworkingBasic.Components.Private;

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Menu" 
            Color="Color.Inherit" 
            Edge="Edge.Start" 
            OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton 
            Icon="@Icons.Custom.Brands.GitHub" 
            Color="Color.Inherit" 
            Link="https://github.com/Garage-Folks" 
            Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Garage Shop</MudText>
        </MudDrawerHeader>
        <PrivateNavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            <MudAlert Severity="Severity.Success" Class="mt-16">Text inside MudContainer</MudAlert>
        </MudContainer>
    </MudMainContent>
</MudLayout>



@code
{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}

