@using Service;
<MudPaper Class="pa-5 justify-center" Elevation="4" style="border-radius: 20px 0px 20px 20px; min-width: 200px">
    <MudText 
        Class="mb-2">
        Would you like to log out?
    </MudText>
    <MudButton 
        Style="left: 50px;" 
        Variant="Variant.Outlined" 
        Color="Color.Error" 
        OnClick="@Submit">
        Log Out
    </MudButton>
</MudPaper>


@code{

    AccountLogin login = new AccountLogin();
    [Parameter] public EventCallback<string> ParentUpdate {get; set;}

    public void Submit()
    {
        // Simple way of handling the logout
        login.ToggleLoggedIn(false);
        login.ToggleOverlay();
        ParentUpdate.InvokeAsync();
    }
    
}